<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.home.motionlayout.step2_7.MotionLayoutStep2_7Fragment">

    <data>

    </data>
    <androidx.constraintlayout.motion.widget.MotionLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/step7_with_hint"
        app:motionDebug="SHOW_PATH" >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/motion_layout_background"
            android:scaleType="centerCrop"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/moon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_moon"
            android:tint="?colorOnPrimary"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/credits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/credits"
            android:textSize="24sp"
            android:textColor="?colorOnPrimary" />

        <!-- Added a hint that flies out and fades after the user swipes to the right -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/swipe_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/swipe_towards_the_right"
            />
    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>