<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.home.coordinatedMotion.CoordinateMotionSizeChangeFragment">

    <data>
<variable
    name="sizeChange"
    type="com.example.android.androidmarki.ui.home.coordinatedMotion.CoordinateMotionSizeChangeFragment" />
    </data>

    <FrameLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="@{()->sizeChange.changeSize()}"
   >

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="180dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp" />

    </FrameLayout>
</layout>